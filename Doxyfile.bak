#-------------------基础项目配置-------------------
DOXYFILE_ENCODING = UTF-8
PROJECT_NAME           = "My C++20 Project"
PROJECT_NUMBER         = 1.0
OUTPUT_DIRECTORY       = docs
OUTPUT_LANGUAGE        = English
RECURSIVE              = YES
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_METHODS  = YES

#-------------------C++20 Modules支持-------------------
CPP_CLI_SUPPORT        = YES
CLANG_ASSISTED_PARSING = YES
CLANG_OPTIONS          =
MACRO_EXPANSION        = YES
EXPAND_ONLY_PREDEF     = YES
PREDEFINED             = __DOXYGEN__

#-------------------图表生成配置-------------------
HAVE_DOT               = YES
UML_LOOK               = YES
CALL_GRAPH             = YES
CALLER_GRAPH           = YES
DOT_IMAGE_FORMAT       = svg
INTERACTIVE_SVG        = YES
DOT_TRANSPARENT        = YES

# GraphViz路径配置（需自行修改）
DOT_PATH               = /usr/bin/dot
CLASS_DIAGRAMS         = YES
COLLABORATION_GRAPH    = YES
INCLUDE_GRAPH          = YES
INCLUDED_BY_GRAPH      = YES

#-------------------时序图支持-------------------
USE_MDFILE_AS_MAINPAGE = README.md
MSCGEN_PATH            = /usr/bin/mscgen
DIA_PATH               = /usr/bin/dia

#-------------------高级代码解析-------------------
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = YES
EXPAND_AS_DEFINED      = MODULE_EXPORT
SKIP_FUNCTION_MACROS   = NO

#-------------------输出格式控制-------------------
GENERATE_HTML          = YES
HTML_OUTPUT            = html
GENERATE_LATEX         = NO

#-------------------模块注释规范-------------------
JAVADOC_AUTOBRIEF      = YES
ALWAYS_DETAILED_SEC    = YES
TAB_SIZE               = 4
ALIASES                = "mod=\xrefitem modules \"Module\" \"Modules\""